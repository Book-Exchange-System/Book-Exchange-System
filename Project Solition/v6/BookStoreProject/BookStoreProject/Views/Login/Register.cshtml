@model User

@{ ViewData["Title"] = "Register Page";
    Layout = "_LoginLayout"; }

<div class="row no-gutters height-self-center">
    <div class="col-sm-12 align-self-center page-content rounded">
        <div class="row m-0">
            <div class="col-sm-12">
                <div class="sign-in-from bg-primary rounded">
                    <h3 class="mb-0 text-center text-white">Sign up</h3>
                    <p class="text-center text-white">Enter your email address and password to access panel.</p>
                    <form method="post" action="/login/register" class="mt-4 form-text">

                        <div class="form-group">
                            <label asp-for="Name">Name</label>
                            <input asp-for="Name" type="text" class="form-control mb-0" id="Name" placeholder="Enter your name" required>
                        </div>
                        <div class="form-group">
                            <label asp-for="Surname">Surname</label>
                            <input asp-for="Surname" type="text" class="form-control mb-0" id="Surname" placeholder="Enter your surname" required>
                        </div>
                        <div class="form-group">
                            <label asp-for="Username">Username</label>
                            <input asp-for="Username" type="text" class="form-control mb-0" id="Username" placeholder="Enter your username" required>
                        </div>
                        <p class="text-danger">@ViewBag.errorMessage</p>
                        <div class="form-group">
                            <label asp-for="Email">Email address</label>
                            <input asp-for="Email" type="email" class="form-control mb-0" id="Email" placeholder="Enter your email" required>
                        </div>
                        <div class="form-group">
                            <label asp-for="Birthday">Birthday</label>
                            @{ String today = DateTime.Today.ToString("yyyy-MM-dd"); }
                            <input asp-for="Birthday" type="date" class="form-control mb-0" id="Birthday" max="@today" required>
                        </div>
                        <div class="form-group">
                            <label asp-for="PhoneNumber">Phone Number</label>
                            <input asp-for="PhoneNumber" type="text" class="form-control mb-0 phoneNumber" id="PhoneNumber" placeholder="Enter your phone number" required>
                        </div>
                        <div class="form-group">
                            <label asp-for="Gender">Gender</label>
                            <select asp-for="Gender" class="form-control mb-0" id="Gender">
                                <option value="">Select Your Gender</option>
                                <option value="F">Female</option>
                                <option value="M">Male</option>
                            </select>

                        </div>

                        <div class="form-group">
                            <label asp-for="Password">Password</label>
                            <input asp-for="Password" type="password" class="form-control mb-0" id="Password" placeholder="Enter Your Password" required>
                        </div>
                        <div asp-validation-summary="All"></div>

                        <div class="sign-info text-center">
                            <button type="submit" class="btn btn-white d-block w-100 mb-2">Sign up</button>
                            <span class="text-dark dark-color d-inline-block line-height-2">Do you have an account? <a href="~/login" class="text-white">Sign in</a></span>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>
